<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VolleyballMovementTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">normal</item>

        <item name="android:lines">1</item>

        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeMaxTextSize">72sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="TwoLinesTitleTextView" parent="TitleTextView">
        <item name="android:lines">2</item>
    </style>

    <style name="AppAnimatedTheme" parent="Theme.VolleyballMovementTracker">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">@android:color/black</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppAnimatedTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeBlueBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/AlphaMidnightBlue</item>
    </style>
    <style name="AppThemeRedBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/AlphaMaroon</item>
    </style>
</resources>