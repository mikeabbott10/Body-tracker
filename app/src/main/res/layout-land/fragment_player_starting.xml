<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/select_trainings_part"
        layout="@layout/fragment_select_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/starting_tv_layout" />


    <RelativeLayout
        android:id="@+id/starting_tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#55000000"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/center_bt_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_bluetooth1"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/middle_tv"
            style="@style/TwoLinesTitleTextView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/start_practice"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/center_bt_icon"/>

        <TextView
            android:id="@+id/middle_tv_back"
            style="@style/TwoLinesTitleTextView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/center_bt_icon"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:text="@string/start_practice"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>