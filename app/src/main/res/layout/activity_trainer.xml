<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/centrale_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:scaleY="-1"
                android:src="@drawable/back3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:alpha="@dimen/sagoma_alpha"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_block2"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentDescription="@null"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bottom_gradient" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/middle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:textAlignment="center"
                    android:text="@string/middle_blocker_training"
                    android:textColor="@color/black"
                    android:textSize="72sp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/middle_tv_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/audiowide"
                    android:text="@string/middle_blocker_training"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="72sp"
                    android:textStyle="bold|italic"
                    android:typeface="normal" />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/centrale_e_laterale_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/back5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:alpha="@dimen/sagoma_alpha"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_block1"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentDescription="@null"
                android:src="@drawable/top_gradient" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/middle_lat_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:textAlignment="center"
                    android:text="@string/middle_lat_blockers_training"
                    android:textColor="@color/black"
                    android:textSize="72sp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/middle_lat_tv_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/audiowide"
                    android:text="@string/middle_lat_blockers_training"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="72sp"
                    android:textStyle="bold|italic"
                    android:typeface="normal" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/who_am_i_iv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:transitionName="who_am_i_choice"
            android:contentDescription="@null"
            app:tint="@color/white" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:contentDescription="@null" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:contentDescription="@null" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>