<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- background-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back7"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- back button -->
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null" />

    <!-- bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/who_am_i_iv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:transitionName="@string/who_am_i_choice"
            android:contentDescription="@null"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/current_training_iv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:transitionName="@string/current_training_choice"
            android:contentDescription="@null"
            app:tint="@color/white" />
        <RelativeLayout
            android:id="@+id/bluetooth_state_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3">
            <ImageView
                android:id="@+id/bluetooth_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_ok"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/bluetooth_state_overlay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>