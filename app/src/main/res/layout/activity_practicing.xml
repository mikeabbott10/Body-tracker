<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- background
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back7"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />-->


    <!-- Content -->
    <!-- fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar"
        android:layout_below="@id/top_bar" />
    <!-- /Content -->

    <!-- top bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aa000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- back button -->
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back" />
        <!-- info button -->
        <ImageButton
            android:id="@+id/info_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_info_24" />
    </RelativeLayout>
    <!-- info tap gesture -->
    <ImageView
        android:id="@+id/info_tap_gif_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:rotation="40"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null" />
    <!-- info description -->
    <TextView
        android:id="@+id/info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#EE000000"
        android:fontFamily="@font/audiowide"
        android:padding="25dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:typeface="monospace"
        android:visibility="invisible" />


    <!-- bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="8dp"
        android:background="#aa000000">
        <ImageView
            android:id="@+id/who_am_i_iv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:transitionName="@string/who_am_i_choice"
            android:contentDescription="@null"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/middle_action_icon_iv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:transitionName="@string/current_training_choice"
            android:contentDescription="@null"
            app:tint="@color/white" />
        <RelativeLayout
            android:id="@+id/bluetooth_state_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3">
            <ImageView
                android:id="@+id/bluetooth_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/bluetooth_state_overlay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>